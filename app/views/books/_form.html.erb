<%= errors %>

<%= form_with model: book do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>

  <div>
    <%= form.label :release %>
    <%= form.datetime_field :release %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
